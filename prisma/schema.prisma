model FrequentlyAskedQuestion {
  id String @id @default(cuid())

  question String
  answer   String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PrivacyPolicy {
  id String @id @default(cuid())

  title   String
  content String? @db.Text

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProductStatus {
  OPEN_FOR_SALE
  SOLD_OUT
  DISCONTINUED
}
